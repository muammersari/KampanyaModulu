
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/css/Style.css" rel="stylesheet" />

</head>
<body>
    <div class="d-flex justify-content-between justify-content-lg-end align-items-center header">
        <i class="bi bi-list fs-5" id="btnMenu"> Menü</i>
        <span class="fs-5 logo">mrsyazilim</span>
    </div>

    <div class="d-flex">
        <div class="leftMenu overflow-auto kaydirma_cubugu" id="leftMenuArea">
            <ul class="list-group">
                <li class="fs-5 pt-2 pb-2 ">
                    <div class="text-center">Hoşgeldin Muammer</div>
                </li>

                <li class="tabItemHeader"><span>Ürün İşlemleri</span></li>
                <li class="tabItemOption"><a href="/Product/ProductPage" class="text-decoration-none text-white"><i class="bi bi-clipboard-plus"></i>&nbsp; Ürün İşlemleri</a></li>

                <li class="tabItemHeader"><span>Tarife İşlemleri</span></li>
                <li class="tabItemOption"><a href="/Schedule/SchedulePage" class="text-decoration-none text-white"><i class="bi bi-clipboard-plus"></i>&nbsp; Tarife İşlemleri</a></li>

                <li class="tabItemHeader"><span>Kampanya İşlemleri</span></li>
                <li class="tabItemOption"><a href="/Campaing/CampaingPage" class="text-decoration-none text-white"><i class="bi bi-clipboard-plus"></i>&nbsp; Kampanya İşlemleri</a></li>

            </ul>
            @*<div class="position-fixed bottom-0 text-center w-100 text-white">2021 Directed By Muammer Sarı</div>*@
        </div>
        <div class="renderArea">
            @RenderBody()
        </div>
    </div>

    <script>
        $("#btnMenu").click(function () {
            if (document.getElementById("leftMenuArea").style.display == "block") {
                document.getElementById("leftMenuArea").style.display = "none";
            } else {
                document.getElementById("leftMenuArea").style.display = "block";
            }
        });
    </script>
</body>
</html>
